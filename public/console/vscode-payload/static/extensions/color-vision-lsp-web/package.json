{
	"name": "color-vision-lsp-web",
	"description": "A language server in a web extension",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"*"
	],
	"browser": "./client/dist/browserClientMain",
	"contributes": {
		"configuration": [
			{
				"order": 23,
				"id": "color-vision-lsp-web",
				"title": "color-vision-lsp-web",
				"properties": {
					"color-vision-lsp-web.trace.server": {
						"type": "string",
						"scope": "window",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "verbose",
						"description": "Traces the communication between VS Code and the color-vision-lsp-web language server."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"chrome": "npm run compile && vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ./test-data"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/mkdirp": "^1.0.2",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-web": "^0.0.22",
		"eslint": "^8.13.0",
		"path-browserify": "^1.0.1",
		"ts-loader": "^9.3.0",
		"typescript": "^4.8.4",
		"webpack": "^5.44.0",
		"webpack-cli": "^4.7.2"
	},
	"dependencies": {
		"assert": "^2.0.0",
		"browserify-fs": "^1.0.0",
		"browserify-zlib": "^0.2.0",
		"console-browserify": "^1.2.0",
		"crypto-browserify": "^3.12.0",
		"https-browserify": "^1.0.0",
		"net-browserify": "^0.2.4",
		"os-browserify": "^0.3.0",
		"process": "^0.11.10",
		"stream-browserify": "^3.0.0",
		"stream-http": "^3.2.0",
		"tty-browserify": "^0.0.1",
		"url": "^0.11.0",
		"util": "^0.12.5",
		"vm-browserify": "^1.1.2",
		"ws-browserify": "^1.0.0"
	}
}